<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:stretchColumns="1">

    <TextView
        android:text="@string/text_introduction"
        style="@style/introduction"
        />

        <ImageView
            android:src="@drawable/avion"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:layout_height="@dimen/hauteur_logo"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/marge_bord"
        android:paddingEnd="@dimen/marge_bouton"
        android:text="@string/text_nb_jours"
        />
    <RadioGroup
        android:id="@+id/saisieNbJours"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/jours_2"
            android:checked="true"
            android:text="@string/text_2"
            style="@style/radio_bouton"
            />
        <RadioButton
            android:id="@+id/jours_3"
            android:text="@string/text_3"
            style="@style/radio_bouton"
            />
        <RadioButton
            android:id="@+id/jours_4"
            android:text="@string/text_4"
            style="@style/radio_bouton"
            />
        <RadioButton
            android:id="@+id/jours_5"
            android:text="@string/text_5"
            style="@style/radio_bouton"
            />
    </RadioGroup>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:paddingStart="@dimen/marge_bord"
            android:paddingEnd="@dimen/marge_bouton"
            android:textSize="@dimen/size_texte"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/text_budget_transport"
            android:layout_column="0"
            android:layout_span="1"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/saisieTransport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_span="2"
            android:layout_marginLeft="@dimen/marge_bord"
            android:layout_marginRight="30dp"
            android:text=""
            android:hint="@string/hint_budget_transport"
            android:inputType="numberPassword"
            android:textSize="@dimen/size_texte"
            android:importantForAutofill="no"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:paddingLeft="@dimen/marge_bord"
            android:layout_span="1"
            android:gravity="center_vertical"
            android:text="@string/text_budget_nuit"
            android:textSize="@dimen/size_texte"
            />

        <EditText
            android:id="@+id/saisieNuit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_span="2"
            android:layout_marginLeft="@dimen/marge_bord"
            android:layout_marginRight="30dp"
            android:hint="@string/hint_budget_nuit"
            android:inputType="numberPassword"
            android:textSize="@dimen/size_texte"
            android:importantForAutofill="no" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:paddingLeft="@dimen/marge_bord"
            android:layout_span="1"
            android:gravity="center_vertical"
            android:text="@string/text_budget_repas"
            android:textSize="@dimen/size_texte"
            />

        <EditText
            android:id="@+id/saisieRepas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_span="2"
            android:text=""
            android:layout_marginLeft="@dimen/marge_bord"
            android:layout_marginRight="30dp"
            android:hint="@string/hint_budget_repas"
            android:inputType="numberPassword"
            android:textSize="@dimen/size_texte"
            android:importantForAutofill="no" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/saisieRepas2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_span="2"
            android:text="@string/text_inclu_repas2"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:paddingLeft="@dimen/marge_bord"
            android:gravity="center_vertical"
            android:text="@string/text_budget_visite_sortie"
            android:textSize="@dimen/size_texte"
            />

        <EditText
            android:id="@+id/saisieVisiteSortie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_span="2"
            android:text=""
            android:hint="@string/hint_budget_visite_sortie"
            android:layout_marginLeft="@dimen/marge_bord"
            android:layout_marginRight="30dp"
            android:inputType="numberPassword"
            android:textSize="@dimen/size_texte"
            android:importantForAutofill="no"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:paddingLeft="@dimen/marge_bord"
            android:layout_span="1"
            android:gravity="center_vertical"
            android:text="@string/text_cout"
            android:textSize="@dimen/size_texte"
            />

        <EditText
            android:id="@+id/affichCout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_span="2"
            android:editable="false"
            android:text=""
            android:hint="@string/hint_cout"
            android:layout_marginLeft="@dimen/marge_bord"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/size_texte"
            android:importantForAutofill="no"
            tools:ignore="Deprecated,TextFields" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        >

        <Button
            android:id="@+id/calculer"
            android:text="@string/bouton_calculer"
            android:layout_gravity="right"
            android:layout_column="1"
            style="@style/bouton"
            />

        <Button
            android:id="@+id/annuler"
            android:text="@string/bouton_annuler"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/marge_bouton"
            style="@style/bouton"
            />

    </TableRow>

</TableLayout>
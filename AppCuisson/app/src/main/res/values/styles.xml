<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_titre</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="android:layout_marginTop">@dimen/marge_bord</item>
        <item name="android:layout_marginBottom">@dimen/marge_bord</item>
    </style>

    <style name="afficher_TextView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkred</item>
    </style>

    <style name="list_plats">
        <item name="android:layout_marginTop">@dimen/marge_bord</item>
        <item name="android:textColor">@color/corail</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
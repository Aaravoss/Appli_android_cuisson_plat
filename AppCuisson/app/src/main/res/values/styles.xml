<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_titre</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="android:layout_marginTop">@dimen/marge_bord</item>
        <item name="android:layout_marginBottom">@dimen/marge_bas</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="afficher_TextView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="android:textSize">@dimen/size_texte</item>
    </style>

    <style name="ajouter_TextView">
        <item name="android:textSize">@dimen/size_texte</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="android:layout_marginLeft">@dimen/marge_bord</item>
        <item name="android:layout_marginBottom">@dimen/marge_bas</item>
    </style>

    <style name="list_plats">
        <item name="android:layout_marginTop">@dimen/marge_bord</item>
        <item name="android:textColor">@color/corail</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="bouton">
        <item name="android:layout_marginRight">@dimen/marge_bouton</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="backgroundTint">@color/sand</item>
    </style>
</resources>